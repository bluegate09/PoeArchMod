<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mod_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mod_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/mod_arcane_buffer" />

        <TextView
            android:id="@+id/mod_name"
            android:layout_margin="8dp"
            android:textColor="@color/dark_gold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/mod_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            tools:text="Arcane Buffer" />

        <ImageView
            android:id="@+id/reward_1"
            app:layout_constraintTop_toBottomOf="@+id/mod_name"
            app:layout_constraintStart_toStartOf="@+id/mod_name"
            app:layout_constraintBottom_toTopOf="@+id/mod_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/reward_armour"/>

        <ImageView
            android:id="@+id/reward_2"
            app:layout_constraintTop_toBottomOf="@+id/mod_name"
            app:layout_constraintStart_toEndOf="@+id/reward_1"
            app:layout_constraintBottom_toTopOf="@+id/mod_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/reward_armour"/>

        <ImageView
            android:id="@+id/reward_3"
            app:layout_constraintTop_toBottomOf="@+id/mod_name"
            app:layout_constraintStart_toEndOf="@+id/reward_2"
            app:layout_constraintBottom_toTopOf="@+id/mod_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/reward_armour"/>

        <ImageView
            android:id="@+id/reward_4"
            app:layout_constraintTop_toBottomOf="@+id/mod_name"
            app:layout_constraintStart_toEndOf="@+id/reward_3"
            app:layout_constraintBottom_toTopOf="@+id/mod_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/reward_armour"/>

        <ImageView
            android:id="@+id/indicator"
            android:layout_margin="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/ic_baseline_arrow_drop_up_24"/>

        <TextView
            android:id="@+id/mod_desc"
            app:layout_constraintStart_toEndOf="@id/mod_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/indicator"
            android:textColor="@color/white"
            android:layout_margin="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="@string/desc_abberath_touched"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>